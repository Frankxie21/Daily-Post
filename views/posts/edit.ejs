<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">
        EDIT <%=post.name%>.  
        </h1>
<div style="width:40%; margin:25px auto;">
        <form action="/index/<%=post._id%>?_method=PUT" method="POST">
            <div class="form-group">
            <input type="text" value="<%=post.name%>" name="post[name]" class="form-control">
            </div>

            <div class="form-group">    
            <input type="text" value="<%=post.image%>" name="post[image]" class="form-control">
            </div>
            <div class="form-group">    
            <textarea style="height: 300px" name="post[description]" class="form-control"><%=post.description%></textarea>
            </div>

            <div class="form-group">    
            <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
            </div>
        </form>
        <a href="/index/<%=post._id%>">Go Back</a>
</div>
</div>
</div>

<%- include("../partials/footer") %>